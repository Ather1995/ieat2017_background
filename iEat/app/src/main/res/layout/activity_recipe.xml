<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fcfcf4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/recipe_bg" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="#78979f"
            android:text="黑胡椒菲力牛排" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Star1"
                android:layout_marginLeft="10dp"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/star_light" />

            <ImageView
                android:id="@+id/Star2"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/star_light" />

            <ImageView
                android:id="@+id/Star3"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/star_light" />

            <ImageView
                android:id="@+id/Star4"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/star_light" />

            <ImageView
                android:id="@+id/Star5"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/star_dark" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#78979f" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营养分类:"
                android:textColor="#78979f"
                android:layout_marginLeft="48dp"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/basket_type1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/type_grain" />

            <ImageView
                android:id="@+id/basket_type2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/type_grain" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:background="#78979f" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="48dp"
                android:textSize="17dp"
                android:text="食材："
                android:textColor="#78979f"
                android:layout_height="match_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="210dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#a2a093"
                    android:text="里脊肉·············································2块"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#a2a093"
                    android:text="黑胡椒粉···········································适量"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#a2a093"
                    android:text="洋葱粒············································1/4个"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#a2a093"
                    android:text="蒜末·················································6瓣"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#a2a093"
                    android:text="黄油················································适量"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#a2a093"
                    android:text="意大利面·············································适量"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#a2a093"
                    android:text="鸡蛋··················································1个"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#a2a093"
                    android:text="黑胡椒粉···············································5勺"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:background="#78979f" />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="48dp"
                android:textSize="17dp"
                android:text="做法："
                android:textColor="#78979f"
                android:layout_height="match_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="210dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="1"
                        android:layout_width="13dp"
                        android:textSize="15dp"
                        android:textColor="#78979f"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#a2a093"
                        android:text="准备好牛里脊，均匀撒上黑胡椒粉。"
                        android:singleLine="false"
                        android:ellipsize="none"
                        android:maxLines="4"
                        android:inputType="textMultiLine"
                        android:textSize="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="2"
                        android:layout_width="13dp"
                        android:textSize="15dp"
                        android:textColor="#78979f"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#a2a093"
                        android:text="用刀背敲打几分钟，然后用保鲜膜盖上腌制1h。"
                        android:singleLine="false"
                        android:ellipsize="none"
                        android:maxLines="4"
                        android:inputType="textMultiLine"
                        android:textSize="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="3"
                        android:layout_width="13dp"
                        android:textSize="15dp"
                        android:textColor="#78979f"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#a2a093"
                        android:text="切好洋葱粒，准备好蒜末和黄油。"
                        android:singleLine="false"
                        android:ellipsize="none"
                        android:maxLines="4"
                        android:inputType="textMultiLine"
                        android:textSize="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="4"
                        android:layout_width="13dp"
                        android:textSize="15dp"
                        android:textColor="#78979f"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#a2a093"
                        android:text="锅里放入黄油，溶化后将蒜末和洋葱粒放进去，小火炒香。然后 加入蚝油、生抽、番茄酱、黑胡椒粉。拌匀后倒入清水，煮沸。"
                        android:singleLine="false"
                        android:ellipsize="none"
                        android:maxLines="4"
                        android:inputType="textMultiLine"
                        android:textSize="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="5"
                        android:layout_width="13dp"
                        android:textSize="15dp"
                        android:textColor="#78979f"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#a2a093"
                        android:text="将材料滤出来，只留下酱汁，然后再次倒入锅内。酱汁滚开之后勾芡粉，至粘稠状即可。"
                        android:singleLine="false"
                        android:ellipsize="none"
                        android:maxLines="4"
                        android:inputType="textMultiLine"
                        android:textSize="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="6"
                        android:layout_width="13dp"
                        android:textSize="15dp"
                        android:textColor="#78979f"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#a2a093"
                        android:text="黑胡椒汁完成！"
                        android:singleLine="false"
                        android:ellipsize="none"
                        android:maxLines="4"
                        android:inputType="textMultiLine"
                        android:textSize="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="7"
                        android:layout_width="13dp"
                        android:textSize="15dp"
                        android:textColor="#78979f"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#a2a093"
                        android:text="煮意大利面。出好后用色拉油拌一下，不要过凉水。"
                        android:singleLine="false"
                        android:ellipsize="none"
                        android:maxLines="4"
                        android:inputType="textMultiLine"
                        android:textSize="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="8"
                        android:layout_width="13dp"
                        android:textSize="15dp"
                        android:textColor="#78979f"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#a2a093"
                        android:text="在煮意大利面的时候，准备好牛排和鸡蛋。"
                        android:singleLine="false"
                        android:ellipsize="none"
                        android:maxLines="4"
                        android:inputType="textMultiLine"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#78979f" />
    </LinearLayout>
</ScrollView>